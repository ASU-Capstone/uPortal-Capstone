<permission-owner xmlns="https://source.jasig.org/schemas/uportal/io/permission-owner" xmlns:ns2="https://source.jasig.org/schemas/uportal/io/stylesheet-descriptor" xmlns:ns3="https://source.jasig.org/schemas/uportal/io/portlet-definition" xmlns:ns4="https://source.jasig.org/schemas/uportal" xmlns:ns5="https://source.jasig.org/schemas/uportal/io/portlet-type" xmlns:ns6="https://source.jasig.org/schemas/uportal/io/user" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="4.0" xsi:schemaLocation="https://source.jasig.org/schemas/uportal/io/permission-owner https://source.jasig.org/schemas/uportal/io/permission-owner/permission-owner-4.0.xsd">
    <name>Groups</name>
    <fname>UP_GROUPS</fname>
    <desc>Permissions controlling uPortal group and category viewing and management</desc>
    <activity>
        <name>View a group</name>
        <fname>VIEW_GROUP</fname>
        <desc>View detailed information about a uPortal group and its membership</desc>
        <targetProvider>allGroupsTargetProvider</targetProvider>
    </activity>
    <activity>
        <name>Edit group</name>
        <fname>EDIT_GROUP</fname>
        <desc>Edit a uPortal group's details and membership list</desc>
        <targetProvider>allGroupsTargetProvider</targetProvider>
    </activity>
    <activity>
        <name>Remove groups</name>
        <fname>DELETE_GROUP</fname>
        <desc>Delete a uPortal group</desc>
        <targetProvider>allGroupsTargetProvider</targetProvider>
    </activity>
    <activity>
        <name>Create group</name>
        <fname>CREATE_GROUP</fname>
        <desc>Create a uPortal groups</desc>
        <targetProvider>allGroupsTargetProvider</targetProvider>
    </activity>
</permission-owner>
